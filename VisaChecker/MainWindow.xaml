<Window x:Class="VisaChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisaChecker"
        mc:Ignorable="d"
        Title="Clipboard Plus" Height="450" Width="620" Icon="/Visa.png"   FontFamily="Aptos"
  Background="#F4F6FA" FontSize="14" WindowStartupLocation="CenterScreen"        >
    <Window.Resources>
        <CollectionViewSource x:Key="categoryViewSource"/>
        <CollectionViewSource x:Key="categoryProductsViewSource"
                              Source="{Binding Products, Source={StaticResource categoryViewSource}}"/>
    </Window.Resources>

    <TabControl>
        <TabItem Header="Visa Checker" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="43.71" />
                    <ColumnDefinition Width="28"/>
                    <ColumnDefinition Width="138.29"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Content="Company Name"  HorizontalAlignment="Center" Margin="0,5,0,5" Grid.Row="0"/>
                <TextBox x:Name="inputTextBox"  VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="5,5,0,5"  Width="200" Grid.Row="0" Grid.Column="1" 
             AcceptsReturn="False" TextChanged="inputTextBox_TextChanged" Grid.ColumnSpan="3"/>
                <Button x:Name="startButton" Content="Stop Monitoring" HorizontalAlignment="Left"  Margin="5" Click="StartButton_Click"  Width="120"   Grid.Row="0" Grid.Column="4" IsDefault="True" />
                <DataGrid x:Name="categoryDataGrid" AutoGenerateColumns="False" 
      EnableRowVirtualization="True"
      ItemsSource="{Binding Source={StaticResource categoryViewSource}}"
       RowDetailsVisibilityMode="VisibleWhenSelected" Margin="5,5,5,5" 
      Grid.Row="1" Grid.ColumnSpan="6" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Name"
                        Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StatusBar x:Name="VisaStatus" Grid.Row="2" Grid.ColumnSpan="6" FontSize="14" Background="#2C3E50" Foreground="White">
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text=" Items found: " />
                            <TextBlock x:Name="itemCountVisa" Text="0" />
                            <TextBlock x:Name="status" Text="" Margin="15 0" Foreground="Orange"/>
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </TabItem>
        <TabItem Header="Clipboard Monitor">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Menu Grid.Row="0"  FontSize="14" Background="#2C3E50" Foreground="White">
                    <MenuItem Header="Clear list" Click="ClearListMenuItem_Click" Background="#2C3E50" Foreground="White"/>
                </Menu>
                <ListBox x:Name="listBox"
             d:ItemsSource="{d:SampleData ItemCount=5}"
             MouseRightButtonUp="listBox_MouseRightButtonUp"
             MouseLeftButtonUp="listBox_MouseLeftButtonUp"
             Grid.Row="1" FontSize="14"
             Background="White"
             BorderBrush="#D0D3D8">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border BorderBrush="SteelBlue" BorderThickness="1" CornerRadius="4" Background="{TemplateBinding Background}">
                                            <ContentPresenter
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="4,2"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <StatusBar x:Name="ClipBoardStatus" Grid.Row="2" Background="#2C3E50" Foreground="White">
                    <StatusBarItem>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text=" Items count: " />
                            <TextBlock x:Name="itemCountClipBoard" Text="0" />
                        </StackPanel>
                    </StatusBarItem>
                </StatusBar>
            </Grid>
        </TabItem>
    </TabControl>

</Window>